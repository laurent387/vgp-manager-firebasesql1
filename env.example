# =================================
# VGP API - Configuration
# =================================

# Environment (development | staging | production)
NODE_ENV=production

# Server
PORT=3000
API_VERSION=v1

# =================================
# Database MariaDB/MySQL
# =================================
# Production: MariaDB on VPS
# DB_HOST=localhost or Docker network IP
DB_HOST=localhost
DB_PORT=3306
DB_NAME=vgpdb
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_SSL=false
DB_CONNECTION_LIMIT=10

# =================================
# Email (Resend)
# =================================
RESEND_API_KEY=re_xxxxxxxxxxxxx

# =================================
# Security
# =================================
# Comma-separated list of allowed origins
# Production: restrict to your domains only
CORS_ORIGINS=https://in-spectra.com,https://www.in-spectra.com

# Rate limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# =================================
# Logging
# =================================
# debug | info | warn | error
LOG_LEVEL=info

# =================================
# API Endpoint (for mobile app / frontend)
# =================================
# Production
EXPO_PUBLIC_API_URL=https://api.in-spectra.com

# Development (uncomment for local dev)
# EXPO_PUBLIC_API_URL=http://localhost:3000
